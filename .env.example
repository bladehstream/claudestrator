# VulnDash Environment Configuration

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./vulndash.db
# For PostgreSQL: DATABASE_URL=postgresql+asyncpg://user:password@localhost/vulndash

# SQL Query Logging
SQL_ECHO=false

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# LLM Processing Configuration
LLM_TEMPERATURE=0.1
LLM_CONFIDENCE_THRESHOLD=0.8
LLM_PROCESSING_INTERVAL_MINUTES=30
LLM_BATCH_SIZE=10

# Application Configuration
LOG_LEVEL=INFO
